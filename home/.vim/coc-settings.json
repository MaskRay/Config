{
  "languageserver": {
    "ccls": {
      "command": "ccls.debug",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "initializationOptions": {
        "cache": {
          "format": "b",
          "directory": ".ccls-cache",
          "hierarchicalPath": true
        },
        "capabilities": {
          "foldingRangeProvider": false,
          "workspace": {
            "workspaceFolders": {
              "supported": false
            }
          }
        },
        "clang":{"extraArgs": ["--gcc-toolchain=/usr"]},
        "completion": {
          "detailedLabel": true,
          "placeholder": false
        },
        "client": {
          "snippetSupport": true
        },
        "index": {
          "onChange": false,
          "initialNoLinkage": true,
          "threads": 2
        }
      }
    },

    "lua-language-server": {
      "command": "lua-language-server",
      "filetypes": ["lua"]
    }
  }
}
